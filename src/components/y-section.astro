---
import { cn } from '@/lib/utils'

type Props = {
  size?: '2xs' | 'xs' | 'sm' | 'md' | 'lg' | 'xl'
  class?: string
}

const sizeMap = {
  '2xs': 'py-0.5 md:py-1',
  xs: 'py-1 md:py-2',
  sm: 'py-2 md:py-4',
  md: 'py-4 md:py-8',
  lg: 'py-8 md:py-16',
  xl: 'py-12 md:py-24',
}

const { size = 'md', class: className } = Astro.props
---

<div class={cn(sizeMap[size], className)}>
  <slot />
</div>
