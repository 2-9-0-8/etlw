---
import { cn } from '@/lib/utils'

type Props = {
  level?: 1 | 2 | 3 | 4 | 5 | 6
  class?: string
  styleAsLevel?: 1 | 2 | 3 | 4 | 5 | 6
}

export const styleMap: Record<number, string> = {
  1: 'text-3xl mb-4 md:text-4xl md:mb-6',
  2: 'text-2xl mb-3 md:mb-4 md:text-3xl',
  3: 'text-xl mb-2 md:text-2xl md:mb-3',
  4: 'text-lg mb-2 md:text-xl',
  5: 'text-md md:text-lg md:mb-2',
  6: 'text-sm md:text-md',
}

const { level = 2, class: className, styleAsLevel, ...rest } = Astro.props
const Cmp = `h${level}`
---

<Cmp
  class={cn(
    'font-display font-extrabold uppercase leading-tight',
    styleMap[styleAsLevel ? styleAsLevel : level],
    className
  )}
  {...rest}>
  <slot />
</Cmp>
